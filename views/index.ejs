<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GlitchGab | Future Chat</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;700&display=swap');

        :root {
            --primary: #6366f1;
            --primary-glow: rgba(99, 102, 241, 0.5);
            --secondary: #a855f7;
            --accent: #ec4899;
            --bg-dark: #0f172a;
            --glass-bg: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.1);
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        body {
            background: var(--bg-dark);
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        /* Animated Mesh Gradient Background */
        .bg-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: radial-gradient(circle at 0% 0%, #1e1b4b 0%, transparent 50%),
                radial-gradient(circle at 100% 0%, #312e81 0%, transparent 50%),
                radial-gradient(circle at 100% 100%, #1e1b4b 0%, transparent 50%),
                radial-gradient(circle at 0% 100%, #312e81 0%, transparent 50%),
                radial-gradient(circle at 50% 50%, #0f172a 0%, transparent 100%);
        }

        .bg-blob {
            position: absolute;
            width: 500px;
            height: 500px;
            background: var(--primary);
            filter: blur(120px);
            opacity: 0.15;
            border-radius: 50%;
            z-index: -1;
            animation: move 20s infinite alternate;
        }

        .bg-blob-2 {
            background: var(--secondary);
            animation-delay: -5s;
            left: 20%;
        }

        .bg-blob-3 {
            background: var(--accent);
            animation-delay: -10s;
            right: 10%;
            bottom: 10%;
        }

        @keyframes move {
            from {
                transform: translate(-10%, -10%) scale(1);
            }

            to {
                transform: translate(20%, 20%) scale(1.2);
            }
        }

        /* Glassmorphism Containers */
        .glass-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 400px;
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo-container {
            text-align: center;
            margin-bottom: 32px;
        }

        .app-logo {
            font-size: 42px;
            font-weight: 800;
            background: linear-gradient(135deg, #fff 0%, var(--text-muted) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -1px;
        }

        .subtitle {
            color: var(--text-muted);
            font-size: 14px;
            margin-top: 4px;
        }

        /* Form Styled Inputs */
        .input-wrapper {
            position: relative;
            margin-bottom: 20px;
        }

        .input-wrapper label {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 14px;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        input {
            width: 100%;
            padding: 16px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            color: white;
            font-size: 15px;
            outline: none;
            transition: all 0.3s ease;
        }

        input:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: var(--primary);
            box-shadow: 0 0 0 4px var(--primary-glow);
        }

        input:focus+label,
        input:not(:placeholder-shown)+label {
            top: -10px;
            left: 12px;
            font-size: 12px;
            color: var(--primary);
            background: var(--bg-dark);
            padding: 0 6px;
        }

        .input-row {
            display: flex;
            gap: 12px;
            margin-bottom: 24px;
        }

        .btn-glow {
            width: 100%;
            padding: 16px;
            background: var(--primary);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-glow:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px var(--primary-glow);
            background: #4f46e5;
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            padding: 0 20px;
            font-size: 13px;
            border-radius: 12px;
            cursor: pointer;
            border: 1px solid var(--glass-border);
            transition: all 0.3s;
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        /* CHAT INTERFACE */
        #chat-screen {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: var(--bg-dark);
        }

        header {
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--glass-border);
            background: rgba(15, 23, 42, 0.8);
            backdrop-filter: blur(10px);
        }

        .room-tag {
            background: var(--primary-glow);
            color: #c7d2fe;
            padding: 6px 14px;
            border-radius: 100px;
            font-size: 12px;
            font-weight: 600;
            border: 1px solid var(--primary);
        }

        #messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 40px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            scrollbar-width: thin;
            scrollbar-color: var(--glass-border) transparent;
        }

        #messages-container::-webkit-scrollbar {
            width: 6px;
        }

        #messages-container::-webkit-scrollbar-thumb {
            background: var(--glass-border);
            border-radius: 10px;
        }

        .msg-node {
            max-width: 70%;
            animation: popIn 0.4s cubic-bezier(0.17, 0.89, 0.32, 1.28);
        }

        @keyframes popIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(10px);
            }

            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .msg-node.mine {
            align-self: flex-end;
        }

        .msg-node.theirs {
            align-self: flex-start;
        }

        .bubble {
            padding: 14px 20px;
            border-radius: 20px;
            position: relative;
            font-size: 15px;
            line-height: 1.5;
        }

        .mine .bubble {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border-bottom-right-radius: 4px;
        }

        .theirs .bubble {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: #f1f5f9;
            border-bottom-left-radius: 4px;
        }

        .meta {
            font-size: 11px;
            color: var(--text-muted);
            margin-top: 6px;
            display: flex;
            gap: 8px;
        }

        .mine .meta {
            flex-direction: row-reverse;
        }

        /* TYPING INDICATOR */
        #typing-box {
            height: 24px;
            margin-bottom: 8px;
            color: var(--accent);
            font-size: 12px;
            font-weight: 500;
            padding-left: 10px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .dot-bounce {
            display: inline-flex;
            gap: 3px;
        }

        .dot {
            width: 4px;
            height: 4px;
            background: var(--accent);
            border-radius: 50%;
            animation: bounce 1.4s infinite ease-in-out;
        }

        .dot:nth-child(2) {
            animation-delay: 0.2s;
        }

        .dot:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes bounce {

            0%,
            80%,
            100% {
                transform: scale(0.6);
                opacity: 0.4;
            }

            40% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* FOOTER INPUT */
        footer {
            padding: 24px 40px;
            background: rgba(15, 23, 42, 0.9);
            border-top: 1px solid var(--glass-border);
        }

        .input-bar {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            display: flex;
            padding: 8px;
            gap: 12px;
            transition: 0.3s;
        }

        .input-bar:focus-within {
            border-color: var(--primary);
            background: rgba(255, 255, 255, 0.05);
        }

        .chat-input {
            background: transparent;
            border: none;
            flex: 1;
            padding: 8px 12px;
            color: white;
            font-size: 15px;
        }

        .chat-input::placeholder {
            color: var(--text-muted);
        }

        .send-btn {
            background: var(--primary);
            color: white;
            border: none;
            width: 42px;
            height: 42px;
            border-radius: 12px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
        }

        .send-btn:hover {
            background: var(--secondary);
            transform: scale(1.05);
        }

        .hidden {
            display: none !important;
        }

        /* Notification */
        .system-notif {
            text-align: center;
            font-size: 12px;
            color: var(--text-muted);
            margin: 10px 0;
            font-style: italic;
        }

        @media (max-width: 640px) {

            header,
            footer {
                padding: 16px;
            }

            #messages-container {
                padding: 20px;
            }
        }
    </style>
</head>

<body>
    <div class="bg-canvas">
        <div class="bg-blob"></div>
        <div class="bg-blob bg-blob-2"></div>
        <div class="bg-blob bg-blob-3"></div>
    </div>

    <!-- Login Screen -->
    <div id="login-screen" class="glass-card">
        <div class="logo-container">
            <div class="app-logo">GlitchGab</div>
            <div class="subtitle">Ephemeral high-speed communication</div>
        </div>

        <div class="input-wrapper">
            <input type="text" id="username-input" placeholder=" " autocomplete="off">
            <label>Master Name</label>
        </div>

        <div class="input-row">
            <div class="input-wrapper" style="flex: 1; margin-bottom: 0;">
                <input type="text" id="room-input" placeholder=" " autocomplete="off">
                <label>Room Secret</label>
            </div>
            <button onclick="generateSecretId()" class="btn-secondary">Gencode</button>
        </div>

        <button onclick="joinChat()" class="btn-glow">Access Mainframe</button>
    </div>

    <!-- Chat Screen -->
    <div id="chat-screen" class="hidden">
        <header>
            <div class="app-logo" style="font-size: 24px;">G.</div>
            <div class="room-tag" id="room-display-header">VOID</div>
            <div style="font-size: 13px; color: var(--text-muted);" id="user-display-header">USER</div>
        </header>

        <div id="messages-container"></div>

        <footer>
            <div id="typing-box" class="hidden">
                <div class="dot-bounce">
                    <div class="dot"></div>
                    <div class="dot"></div>
                    <div class="dot"></div>
                </div>
                <span id="typing-text">Someone is decrypting...</span>
            </div>
            <form id="form" class="input-bar">
                <input id="input" class="chat-input" autocomplete="off" placeholder="Write a message...">
                <button class="send-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"
                        stroke-linecap="round" stroke-linejoin="round">
                        <line x1="22" y1="2" x2="11" y2="13"></line>
                        <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                    </svg>
                </button>
            </form>
        </footer>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const loginScreen = document.getElementById('login-screen');
        const chatScreen = document.getElementById('chat-screen');
        const usernameInput = document.getElementById('username-input');
        const roomInput = document.getElementById('room-input');
        const roomDisplayHeader = document.getElementById('room-display-header');
        const userDisplayHeader = document.getElementById('user-display-header');
        const messagesContainer = document.getElementById('messages-container');
        const form = document.getElementById('form');
        const input = document.getElementById('input');
        const typingBox = document.getElementById('typing-box');
        const typingText = document.getElementById('typing-text');

        let myUsername = '';
        let myRoom = '';
        let typingTimeout;

        function generateSecretId() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ';
            let result = '';
            for (let i = 0; i < 3; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            roomInput.value = result;
            roomInput.dispatchEvent(new Event('input')); // Trigger label animation
        }

        function joinChat() {
            myUsername = usernameInput.value.trim();
            myRoom = roomInput.value.trim();

            if (myUsername && myRoom) {
                loginScreen.classList.add('hidden');
                chatScreen.classList.remove('hidden');
                roomDisplayHeader.textContent = `ROOM: ${myRoom}`;
                userDisplayHeader.textContent = myUsername.toUpperCase();
                socket.emit('join room', { username: myUsername, room: myRoom });
            } else {
                alert("Credentials required to join.");
            }
        }

        // Typing logic
        input.addEventListener('keydown', () => {
            socket.emit('typing', { username: myUsername, room: myRoom });

            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(() => {
                socket.emit('stop typing', { username: myUsername, room: myRoom });
            }, 2000);
        });

        // Backend events
        socket.on('typing', (data) => {
            typingText.textContent = `${data.username} is typing...`;
            typingBox.classList.remove('hidden');
        });

        socket.on('stop typing', () => {
            typingBox.classList.add('hidden');
        });

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            if (input.value) {
                socket.emit('chat message', { msg: input.value, room: myRoom, username: myUsername });
                socket.emit('stop typing', { username: myUsername, room: myRoom });
                input.value = '';
            }
        });

        socket.on('chat message', function (data) {
            const isMe = data.username === myUsername;
            const msgDiv = document.createElement('div');
            msgDiv.className = `msg-node ${isMe ? 'mine' : 'theirs'}`;

            msgDiv.innerHTML = `
                <div class="bubble">
                    ${data.msg.replace(/@(\w+)/g, '<b style="color:#f0abfc">@$1</b>')}
                </div>
                <div class="meta">
                    <span>${isMe ? 'YOU' : data.username.toUpperCase()}</span>
                    <span>â€¢</span>
                    <span>${data.time || 'NOW'}</span>
                </div>
            `;

            messagesContainer.appendChild(msgDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });

        socket.on('notification', function (msg) {
            const notifDiv = document.createElement('div');
            notifDiv.className = 'system-notif';
            notifDiv.textContent = msg;
            messagesContainer.appendChild(notifDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });
    </script>
</body>

</html>