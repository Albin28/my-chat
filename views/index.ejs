<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GlitchGab</title>
    <style>
        /* INSTAGRAM-INSPIRED DESIGN */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #667eea 75%, #764ba2 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            color: #262626;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            position: relative;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image:
                radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 50% 20%, rgba(240, 147, 251, 0.1) 0%, transparent 60%);
            pointer-events: none;
            animation: pulse 8s ease-in-out infinite;
        }

        /* LOGIN SCREEN */
        #login-screen {
            width: 100%;
            max-width: 350px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1),
                0 0 0 1px rgba(255, 255, 255, 0.2) inset,
                0 0 60px rgba(102, 126, 234, 0.3);
            animation: fadeIn 0.6s ease-out;
        }

        .app-logo {
            font-size: 48px;
            font-weight: 600;
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 40px;
            font-family: 'Brush Script MT', cursive;
            filter: drop-shadow(0 2px 8px rgba(220, 39, 67, 0.3));
        }

        input {
            width: 100%;
            padding: 10px 12px;
            margin-bottom: 8px;
            background: #ffffff !important;
            border: 1px solid #dbdbdb;
            border-radius: 4px;
            font-size: 14px;
            color: #000000 !important;
            outline: none;
        }

        input:focus {
            border-color: #a8a8a8;
        }

        input::placeholder {
            color: #8e8e8e;
        }

        button {
            width: 100%;
            padding: 8px 16px;
            background: linear-gradient(135deg, #0095f6 0%, #667eea 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 12px;
            box-shadow: 0 4px 15px rgba(0, 149, 246, 0.3);
            transition: all 0.3s ease;
        }

        button:hover {
            background: linear-gradient(135deg, #1877f2 0%, #764ba2 100%);
            box-shadow: 0 6px 20px rgba(0, 149, 246, 0.4);
            transform: translateY(-2px);
        }

        button:active {
            opacity: 0.7;
        }

        .btn-secondary {
            background: #fff;
            color: #0095f6;
            border: 1px solid #dbdbdb;
            margin-top: 8px;
            padding: 10px 12px;
        }

        .btn-secondary:hover {
            background: #fafafa;
        }

        .input-group {
            display: flex;
            gap: 8px;
            margin-bottom: 8px;
        }

        /* CHAT SCREEN */
        #chat-screen {
            width: 100%;
            max-width: 935px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            display: flex;
            flex-direction: column;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            border-radius: 12px;
            overflow: hidden;
        }

        /* HEADER */
        header {
            padding: 20px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            backdrop-filter: blur(10px);
        }

        .logo {
            font-size: 24px;
            font-weight: 600;
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .room-badge {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
            padding: 6px 16px;
            border-radius: 16px;
            font-size: 13px;
            color: #262626;
            font-weight: 600;
            border: 1px solid rgba(102, 126, 234, 0.3);
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
        }

        .user-name {
            font-size: 14px;
            font-weight: 600;
            color: #8e8e8e;
        }

        /* MESSAGES */
        #messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0.95) 0%, rgba(240, 249, 255, 0.95) 100%);
        }

        #messages-container::-webkit-scrollbar {
            width: 6px;
        }

        #messages-container::-webkit-scrollbar-thumb {
            background: #dbdbdb;
            border-radius: 3px;
        }

        .message-row {
            display: flex;
            margin-bottom: 16px;
        }

        .message-row.mine {
            justify-content: flex-end;
        }

        .message-row.theirs {
            justify-content: flex-start;
        }

        .message-bubble {
            max-width: 60%;
            padding: 12px 16px;
            border-radius: 20px;
            word-wrap: break-word;
            animation: fadeIn 0.3s ease-out;
            transition: transform 0.2s ease;
        }

        .message-bubble:hover {
            transform: translateY(-2px);
        }

        .message-row.mine .message-bubble {
            background: linear-gradient(135deg, #0095f6 0%, #667eea 100%);
            background-size: 200% 200%;
            color: #fff;
            box-shadow: 0 4px 15px rgba(0, 149, 246, 0.4);
        }

        .message-row.theirs .message-bubble {
            background: rgba(239, 239, 239, 0.9);
            color: #262626;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .message-sender {
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 4px;
            display: block;
        }

        .message-row.mine .message-sender {
            color: rgba(255, 255, 255, 0.8);
            text-align: right;
        }

        .message-row.theirs .message-sender {
            color: #8e8e8e;
        }

        .message-text {
            font-size: 14px;
            line-height: 1.4;
        }

        .message-time {
            font-size: 11px;
            margin-top: 4px;
            opacity: 0.6;
            text-align: right;
        }

        .tag-highlight {
            background: rgba(255, 255, 255, 0.2);
            padding: 2px 4px;
            border-radius: 4px;
            font-weight: 600;
        }

        .notification {
            text-align: center;
            color: #8e8e8e;
            font-size: 13px;
            margin: 20px 0;
        }

        /* INPUT AREA */
        #form {
            display: flex;
            gap: 12px;
            padding: 20px;
            border-top: 2px solid rgba(255, 255, 255, 0.3);
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(240, 249, 255, 0.95) 100%);
            backdrop-filter: blur(10px);
        }

        #form input {
            flex: 1;
            padding: 10px 16px;
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 22px;
            background: rgba(255, 255, 255, 0.95) !important;
            color: #000000 !important;
            margin: 0;
            transition: all 0.3s ease;
        }

        #form input:focus {
            border-color: #667eea;
            outline: none;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background: #ffffff !important;
        }

        #form button {
            padding: 12px 16px;
            background: linear-gradient(135deg, #0095f6 0%, #667eea 100%);
            color: #fff;
            border: none;
            border-radius: 50%;
            font-size: 20px;
            cursor: pointer;
            margin: 0;
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 2px 12px rgba(0, 149, 246, 0.3);
        }

        #form button:hover {
            background: linear-gradient(135deg, #1877f2 0%, #764ba2 100%);
            transform: scale(1.1) rotate(15deg);
            box-shadow: 0 6px 25px rgba(0, 149, 246, 0.5);
        }

        #form button:active {
            transform: scale(0.95) rotate(0deg);
        }

        .hidden {
            display: none !important;
        }

        @media (max-width: 768px) {
            #chat-screen {
                max-width: 100%;
                border: none;
            }

            #login-screen {
                border: none;
            }
        }
    </style>
</head>

<body>
    <!-- Login Screen -->
    <div id="login-screen">
        <div class="app-logo">GlitchGab</div>

        <input id="username-input" autocomplete="off" placeholder="Username"
            style="background: #ffffff !important; color: #000000 !important;" />

        <div class="input-group" style="display: flex; gap: 8px;">
            <input id="room-input" autocomplete="off" placeholder="Room code"
                style="flex: 1; background: #ffffff !important; color: #000000 !important; border: 2px solid rgba(102, 126, 234, 0.3) !important; padding: 10px 12px !important; font-size: 14px !important;" />
            <button onclick="generateSecretId()" class="btn-secondary">Generate</button>
        </div>

        <button onclick="joinChat()">Join Room</button>
    </div>

    <!-- Chat Screen -->
    <div id="chat-screen" class="hidden">
        <header>
            <div class="logo">GlitchGab</div>
            <div class="room-badge" id="room-display-header">Room</div>
            <div class="user-name" id="user-display-header"></div>
        </header>

        <div id="messages-container"></div>

        <form id="form" action="">
            <input id="input" autocomplete="off" placeholder="Message..." />
            <button>✈️</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        const loginScreen = document.getElementById('login-screen');
        const chatScreen = document.getElementById('chat-screen');
        const usernameInput = document.getElementById('username-input');
        const roomInput = document.getElementById('room-input');
        const roomDisplayHeader = document.getElementById('room-display-header');
        const userDisplayHeader = document.getElementById('user-display-header');
        const messagesContainer = document.getElementById('messages-container');
        const form = document.getElementById('form');
        const input = document.getElementById('input');

        let myUsername = '';
        let myRoom = '';

        function generateSecretId() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ';
            let result = '';
            for (let i = 0; i < 3; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            roomInput.value = result;
        }

        function joinChat() {
            myUsername = usernameInput.value.trim();
            myRoom = roomInput.value.trim();

            if (myUsername && myRoom) {
                loginScreen.classList.add('hidden');
                chatScreen.classList.remove('hidden');

                roomDisplayHeader.textContent = myRoom;
                userDisplayHeader.textContent = myUsername;

                socket.emit('join room', { username: myUsername, room: myRoom });
            } else {
                alert("Please enter username and room code");
            }
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            if (input.value) {
                const msg = input.value;
                socket.emit('chat message', { msg, room: myRoom, username: myUsername });
                input.value = '';
            }
        });

        socket.on('chat message', function (data) {
            const isMe = data.username === myUsername;
            const rowDiv = document.createElement('div');
            rowDiv.className = `message-row ${isMe ? 'mine' : 'theirs'}`;

            const bubbleDiv = document.createElement('div');
            bubbleDiv.className = 'message-bubble';

            let processedMsg = data.msg;
            processedMsg = processedMsg.replace(/@(\w+)/g, '<span class="tag-highlight">@$1</span>');

            const senderSpan = document.createElement('span');
            senderSpan.className = 'message-sender';
            senderSpan.textContent = isMe ? 'You' : data.username;

            const textDiv = document.createElement('div');
            textDiv.className = 'message-text';
            textDiv.innerHTML = processedMsg;

            const timeDiv = document.createElement('div');
            timeDiv.className = 'message-time';
            timeDiv.textContent = data.time || 'now';

            bubbleDiv.appendChild(senderSpan);
            bubbleDiv.appendChild(textDiv);
            bubbleDiv.appendChild(timeDiv);
            rowDiv.appendChild(bubbleDiv);

            messagesContainer.appendChild(rowDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });

        socket.on('notification', function (msg) {
            const notifDiv = document.createElement('div');
            notifDiv.className = 'notification';
            notifDiv.textContent = msg;
            messagesContainer.appendChild(notifDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });
    </script>
</body>

</html>