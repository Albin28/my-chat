<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GlitchGab</title>
    <style>
        /* INSTAGRAM-INSPIRED DESIGN */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #fafafa;
            color: #262626;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* LOGIN SCREEN */
        #login-screen {
            width: 100%;
            max-width: 350px;
            background: #fff;
            border: 1px solid #dbdbdb;
            border-radius: 8px;
            padding: 40px;
            text-align: center;
        }

        .app-logo {
            font-size: 48px;
            font-weight: 600;
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 40px;
            font-family: 'Brush Script MT', cursive;
        }

        input {
            width: 100%;
            padding: 10px 12px;
            margin-bottom: 8px;
            background: #fafafa;
            border: 1px solid #dbdbdb;
            border-radius: 4px;
            font-size: 14px;
            outline: none;
        }

        input:focus {
            border-color: #a8a8a8;
        }

        input::placeholder {
            color: #8e8e8e;
        }

        button {
            width: 100%;
            padding: 8px 16px;
            background: #0095f6;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 12px;
        }

        button:hover {
            background: #1877f2;
        }

        button:active {
            opacity: 0.7;
        }

        .btn-secondary {
            background: #fff;
            color: #0095f6;
            border: 1px solid #dbdbdb;
            margin-top: 8px;
        }

        .btn-secondary:hover {
            background: #fafafa;
        }

        .input-group {
            display: flex;
            gap: 8px;
            margin-bottom: 8px;
        }

        /* CHAT SCREEN */
        #chat-screen {
            width: 100%;
            max-width: 935px;
            height: 100vh;
            background: #fff;
            border: 1px solid #dbdbdb;
            display: flex;
            flex-direction: column;
        }

        /* HEADER */
        header {
            padding: 20px;
            border-bottom: 1px solid #dbdbdb;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #fff;
        }

        .logo {
            font-size: 24px;
            font-weight: 600;
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .room-badge {
            background: #f0f0f0;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 500;
            color: #262626;
        }

        .user-name {
            font-size: 14px;
            font-weight: 600;
            color: #8e8e8e;
        }

        /* MESSAGES */
        #messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: #fff;
        }

        #messages-container::-webkit-scrollbar {
            width: 6px;
        }

        #messages-container::-webkit-scrollbar-thumb {
            background: #dbdbdb;
            border-radius: 3px;
        }

        .message-row {
            display: flex;
            margin-bottom: 16px;
        }

        .message-row.mine {
            justify-content: flex-end;
        }

        .message-row.theirs {
            justify-content: flex-start;
        }

        .message-bubble {
            max-width: 60%;
            padding: 12px 16px;
            border-radius: 20px;
            word-wrap: break-word;
        }

        .message-row.mine .message-bubble {
            background: #0095f6;
            color: #fff;
        }

        .message-row.theirs .message-bubble {
            background: #efefef;
            color: #262626;
        }

        .message-sender {
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 4px;
            display: block;
        }

        .message-row.mine .message-sender {
            color: rgba(255, 255, 255, 0.8);
            text-align: right;
        }

        .message-row.theirs .message-sender {
            color: #8e8e8e;
        }

        .message-text {
            font-size: 14px;
            line-height: 1.4;
        }

        .message-time {
            font-size: 11px;
            margin-top: 4px;
            opacity: 0.6;
            text-align: right;
        }

        .tag-highlight {
            background: rgba(255, 255, 255, 0.2);
            padding: 2px 4px;
            border-radius: 4px;
            font-weight: 600;
        }

        .notification {
            text-align: center;
            color: #8e8e8e;
            font-size: 13px;
            margin: 20px 0;
        }

        /* INPUT AREA */
        #form {
            display: flex;
            gap: 12px;
            padding: 20px;
            border-top: 1px solid #dbdbdb;
            background: #fff;
        }

        #form input {
            flex: 1;
            padding: 10px 16px;
            border: 1px solid #dbdbdb;
            border-radius: 22px;
            background: #fafafa;
            margin: 0;
        }

        #form button {
            padding: 10px 24px;
            background: #0095f6;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            margin: 0;
        }

        #form button:hover {
            background: #1877f2;
        }

        .hidden {
            display: none !important;
        }

        @media (max-width: 768px) {
            #chat-screen {
                max-width: 100%;
                border: none;
            }

            #login-screen {
                border: none;
            }
        }
    </style>
</head>

<body>
    <!-- Login Screen -->
    <div id="login-screen">
        <div class="app-logo">GlitchGab</div>

        <input id="username-input" autocomplete="off" placeholder="Username" />

        <div class="input-group">
            <input id="room-input" autocomplete="off" placeholder="Room code" style="flex: 1;" />
            <button onclick="generateSecretId()" class="btn-secondary">Generate</button>
        </div>

        <button onclick="joinChat()">Join Room</button>
    </div>

    <!-- Chat Screen -->
    <div id="chat-screen" class="hidden">
        <header>
            <div class="logo">GlitchGab</div>
            <div class="room-badge" id="room-display-header">Room</div>
            <div class="user-name" id="user-display-header"></div>
        </header>

        <div id="messages-container"></div>

        <form id="form" action="">
            <input id="input" autocomplete="off" placeholder="Message..." />
            <button>Send</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        const loginScreen = document.getElementById('login-screen');
        const chatScreen = document.getElementById('chat-screen');
        const usernameInput = document.getElementById('username-input');
        const roomInput = document.getElementById('room-input');
        const roomDisplayHeader = document.getElementById('room-display-header');
        const userDisplayHeader = document.getElementById('user-display-header');
        const messagesContainer = document.getElementById('messages-container');
        const form = document.getElementById('form');
        const input = document.getElementById('input');

        let myUsername = '';
        let myRoom = '';

        function generateSecretId() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ';
            let result = '';
            for (let i = 0; i < 3; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            roomInput.value = result;
        }

        function joinChat() {
            myUsername = usernameInput.value.trim();
            myRoom = roomInput.value.trim();

            if (myUsername && myRoom) {
                loginScreen.classList.add('hidden');
                chatScreen.classList.remove('hidden');

                roomDisplayHeader.textContent = myRoom;
                userDisplayHeader.textContent = myUsername;

                socket.emit('join room', { username: myUsername, room: myRoom });
            } else {
                alert("Please enter username and room code");
            }
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            if (input.value) {
                const msg = input.value;
                socket.emit('chat message', { msg, room: myRoom, username: myUsername });
                input.value = '';
            }
        });

        socket.on('chat message', function (data) {
            const isMe = data.username === myUsername;
            const rowDiv = document.createElement('div');
            rowDiv.className = `message-row ${isMe ? 'mine' : 'theirs'}`;

            const bubbleDiv = document.createElement('div');
            bubbleDiv.className = 'message-bubble';

            let processedMsg = data.msg;
            processedMsg = processedMsg.replace(/@(\w+)/g, '<span class="tag-highlight">@$1</span>');

            const senderSpan = document.createElement('span');
            senderSpan.className = 'message-sender';
            senderSpan.textContent = isMe ? 'You' : data.username;

            const textDiv = document.createElement('div');
            textDiv.className = 'message-text';
            textDiv.innerHTML = processedMsg;

            const timeDiv = document.createElement('div');
            timeDiv.className = 'message-time';
            timeDiv.textContent = data.time || 'now';

            bubbleDiv.appendChild(senderSpan);
            bubbleDiv.appendChild(textDiv);
            bubbleDiv.appendChild(timeDiv);
            rowDiv.appendChild(bubbleDiv);

            messagesContainer.appendChild(rowDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });

        socket.on('notification', function (msg) {
            const notifDiv = document.createElement('div');
            notifDiv.className = 'notification';
            notifDiv.textContent = msg;
            messagesContainer.appendChild(notifDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });
    </script>
</body>

</html>